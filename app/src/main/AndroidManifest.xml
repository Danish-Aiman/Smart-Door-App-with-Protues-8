<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fyp.antispywareapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission-sdk-23 android:name="android.permission.REQUEST_DELETE_PACKAGES" />

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">

        <activity
            android:name="com.fyp.antispywareapp.loginpage.Login"
            android:theme="@style/Theme.Design.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fyp.antispywareapp.loginpage.SignUp"
            android:exported="true"
            android:theme="@style/Theme.Design.Light.NoActionBar"
            />

        <activity
            android:name="com.fyp.antispywareapp.activities.MainActivity"
            android:label="@string/scan_now"
            android:theme="@style/Theme.Design.Light.NoActionBar" >
        </activity>

        <activity
            android:name="com.fyp.antispywareapp.activities.ScanActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.fyp.antispywareapp.activities.ResultActivity"
            android:parentActivityName="com.fyp.antispywareapp.activities.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fyp.antispywareapp.activities.MainActivity" />
        </activity>

        <receiver
            android:name="com.fyp.antispywareapp.receiver.AppListener"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

    </application>

    <dist:module dist:instant="true" />

</manifest>