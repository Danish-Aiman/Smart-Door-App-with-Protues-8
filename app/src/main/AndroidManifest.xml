<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.projectmatris.antimalwareapp">
    <uses-permission-sdk-23 android:name="android.permission.REQUEST_DELETE_PACKAGES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="tech.projectmatris.antimalwareapp.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tech.projectmatris.antimalwareapp.MainActivity"
            android:label="SCAN NOW"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="tech.projectmatris.antimalwareapp.SettingsActivity"
            android:label="SETTINGS"
            android:theme="@style/AppTheme"
            android:parentActivityName="tech.projectmatris.antimalwareapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.projectmatris.antimalwareapp.MainActivity" />
        </activity>
        <activity
            android:name="tech.projectmatris.antimalwareapp.HelpActivity"
            android:label="HELP"
            android:theme="@style/AppTheme"
            android:parentActivityName="tech.projectmatris.antimalwareapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.projectmatris.antimalwareapp.MainActivity" />
        </activity>
        <activity android:name="tech.projectmatris.antimalwareapp.ScanActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="tech.projectmatris.antimalwareapp.ResultActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName="tech.projectmatris.antimalwareapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.projectmatris.antimalwareapp.MainActivity" />
        </activity>
    </application>

    <dist:module dist:instant="true" />

</manifest>