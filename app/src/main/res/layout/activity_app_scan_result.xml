<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/app_background"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/app_icon"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="40dp"
    />
<TextView
    android:id="@+id/app_name"
    android:textColor="@color/secondaryTextColor"
    android:layout_marginTop="32dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/app_icon"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/app_package"
        android:textColor="@color/secondaryTextColor"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/app_prediction"
        android:textColor="@color/secondaryTextColor"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_package"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
<TextView
    android:id="@+id/app_info"
    android:layout_marginTop="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/app_prediction"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
<TextView
    android:id="@+id/permissions_list_text"
    android:textColor="@color/secondaryTextColor"
    android:layout_width="wrap_content"
    android:text="@string/permission_list"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:paddingHorizontal="8dp"
    app:layout_constraintTop_toBottomOf="@id/app_info"
    app:layout_constraintStart_toStartOf="parent"
    />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/permission_list"
    android:nestedScrollingEnabled="false"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/permissions_list_text"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
<Button
    android:id="@+id/uninstallButton"
    android:layout_marginTop="16dp"
    android:visibility="invisible"
    android:textColor="#FFFFFF"
    android:background="#2196F3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/uninstall"
    app:layout_constraintTop_toBottomOf="@id/permission_list"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>