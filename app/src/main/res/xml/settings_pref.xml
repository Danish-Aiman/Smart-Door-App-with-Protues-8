<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="App Settings"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="true"
            android:key="realTime"
            android:summary="Automatically scan new apps"
            android:title="Real Time Scan"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="includeSystemApps"
            android:summary="Include system apps while scanning \n(Not recommended)"
            android:title="Scan System Apps (Error-prone)"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="darkMode"
            android:summary="Enable/disable dark mode for the app"
            android:title="Dark Mode"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Help &amp; Support"
        app:iconSpaceReserved="false">
        <Preference
            android:summary="Rate this app in Play Store"
            android:title="Rate This App"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=tech.projectmatris.antimalwareapp" />
        </Preference>
        <Preference
            android:summary="View open source licenses"
            android:title="Open Source Licenses"
            app:iconSpaceReserved="false">
            <intent
                android:targetClass="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
                android:targetPackage="tech.projectmatris.antimalwareapp" />
        </Preference>
        <Preference
            android:summary="@string/app_version"
            android:title="App Version"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>